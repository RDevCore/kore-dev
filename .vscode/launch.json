    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch CLI",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/pivx-cli",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch Daemon",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/pivxd",
            "args": ["-debug","-par=1"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}