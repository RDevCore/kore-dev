    "version": "0.2.0",
    "configurations": [

        {
            "name": "(gdb) Launch CLI",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/pivx-cli",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Daemon - Single",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/pivxd",
            "args": ["-testnet","-debug","-par=1"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerArgs": "--data-directory=/home/kore/gdb-8.1/gdb/data-directory",
            "additionalSOLibSearchPath": "/home/kore/EXPRESSKORE/depends/x86_64-pc-linux-gnu/lib;/usr/lib/x86_64-linux-gnu",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                { "text": "handle all nostop pass", "description": "Sending Signals to Application", "ignoreFailures": false }
            ]
        },
        {
            "name": "(gdb) Daemon Multi",
